# Dockerfile for Vue.js frontend
FROM node:18-slim

# Set work directory
WORKDIR /app

# Create dist directory and copy working_app.html
RUN mkdir -p dist
COPY working_app.html ./dist/index.html

# Expose port
EXPOSE 8080

# Copy server.js
COPY server.js ./server.js

# Run the server
CMD ["node", "server.js"]
